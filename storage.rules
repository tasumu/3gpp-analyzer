rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Helper function to check if user is approved
    function isApprovedUser() {
      return request.auth != null &&
             firestore.get(/databases/(default)/documents/users/$(request.auth.uid)).data.status == 'approved';
    }

    // Original documents (from FTP)
    match /original/{allPaths=**} {
      // Allow read only for approved users
      allow read: if isApprovedUser();

      // Allow write only from backend (admin SDK)
      allow write: if false;
    }

    // Normalized documents (docx)
    match /normalized/{allPaths=**} {
      // Allow read only for approved users
      allow read: if isApprovedUser();

      // Allow write only from backend (admin SDK)
      allow write: if false;
    }

    // Output files (review sheets, etc.)
    match /outputs/{allPaths=**} {
      // Allow read only for approved users
      allow read: if isApprovedUser();

      // Allow write only from backend (admin SDK)
      allow write: if false;
    }

    // Default deny
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
