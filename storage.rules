rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Original documents (from FTP)
    match /original/{allPaths=**} {
      // Allow read for authenticated users
      allow read: if request.auth != null;

      // Allow write only from backend (admin SDK)
      allow write: if false;
    }

    // Normalized documents (docx)
    match /normalized/{allPaths=**} {
      // Allow read for authenticated users
      allow read: if request.auth != null;

      // Allow write only from backend (admin SDK)
      allow write: if false;
    }

    // Output files (review sheets, etc.)
    match /outputs/{allPaths=**} {
      // Allow read for authenticated users
      allow read: if request.auth != null;

      // Allow write only from backend (admin SDK)
      allow write: if false;
    }

    // Default deny
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
